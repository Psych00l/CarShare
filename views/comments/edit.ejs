<% include ../partials/header %>
<div class="row">
    <div class="container">
        <h1>Edit comment</h1>
        
        <form action="/cars/<%= car_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" value="<%= comment.text %>" class="form-control">
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        
        
        <a href="/cars">Go back</a>
    </div>
</div>
<% include ../partials/footer %>