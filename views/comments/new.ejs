<% include ../partials/header %>
<div class="row">
    <div class="container">
        <h1>Add new comment to <%= car.name %></h1>
        
        <form action="/cars/<%= car._id %>/comments" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" placeholder="text" class="form-control">
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        
        
        <a href="/cars">Go back</a>
    </div>
</div>
<% include ../partials/footer %>